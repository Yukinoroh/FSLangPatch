<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel label="Inventari" name="main inventory panel">
	<panel.string name="ItemcountFetching">
		Recuperant [ITEM_COUNT] articles i [CATEGORY_COUNT] carpetes... [FILTER]
	</panel.string>
	<panel.string name="ItemcountCompleted">
		[ITEM_COUNT] articles i [CATEGORY_COUNT] carpetes [FILTER]
	</panel.string>
	<panel.string name="ItemcountUnknown">
		Recuperant [ITEM_COUNT] articles i [CATEGORY_COUNT] carpetes [FILTER]
	</panel.string>
	<text name="ItemcountText">
		Articles:
	</text>
	<filter_editor label="Filtre" name="inventory search editor" tool_tip="Escriviu una o més paraules per a cercar. Feu servir '+' per a separar-les"/>
	<button name="collapse_btn" label="Plega"/>
	<button name="expand_btn" label="Desplega" />
	<text name="filter_label" width="60" value="Filtre:"/>
	<combo_box name="filter_combo_box">
		<combo_box.item value="filter_type_all" label="Tots els tipus" />
		<combo_box.item value="filter_type_animations" label="Animacions" />
		<combo_box.item value="filter_type_calling_cards" label="Targetes de visita" />
		<combo_box.item value="filter_type_clothing" label="Roba / Parts del cos" />
		<combo_box.item value="filter_type_gestures" label="Gestos" />
		<combo_box.item value="filter_type_landmarks" label="Adreces d'interès" />
		<combo_box.item value="filter_type_notecards" label="Notes" />
		<combo_box.item value="filter_type_objects" label="Objectes" />
		<combo_box.item value="filter_type_scripts" label="Scripts" />
		<combo_box.item value="filter_type_sounds" label="Sons" />
		<combo_box.item value="filter_type_textures" label="Textures" />
		<combo_box.item value="filter_type_snapshots" label="Instantànies" />
		<combo_box.item value="filter_type_meshes" label="Malla" />
		<combo_box.item value="filter_type_settings" label="Configuració" />
		<combo_box.item value="filter_type_custom" label="Altres..." />
	</combo_box>
	<tab_container name="inventory filter tabs">
		<inventory_panel label="Inventari" name="All Items"/>
		<recent_inventory_panel label="Recents" name="Recent Items"/>
		<worn_inventory_panel label="Portant" name="Worn Items"/>
	</tab_container>
	<panel name="bottom_panel">
		<panel name="options_gear_btn_panel">
			<menu_button name="options_gear_btn" tool_tip="Mostra més opcions"/>
		</panel>
		<panel name="add_btn_panel">
			<button name="add_btn" tool_tip="Afegeix un article nou"/>
		</panel>
		<panel name="new_inventory_panel">
			<button name="new_inv_btn" tool_tip="Finestra d'inventari addicional"/>
		</panel>
		<panel name="collapse_panel">
			<button label="Plega" name="collapse_btn" tool_tip="Plega totes les carpetes" />
		</panel>
		<panel name="expand_panel">
			<button label="Desplega" name="expand_btn" tool_tip="Desplega totes les carpetes" />
		</panel>
		<panel name="dummy_panel">
			<text name="ItemcountText">
				Articles
			</text>
		</panel>
		<panel name="trash_btn_panel">
			<dnd_button name="trash_btn" tool_tip="Suprimeix l'article seleccionat"/>
		</panel>
	</panel>
</panel>
