<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<multi_floater name="floater_im_box" title="Conversa">
	<string name="collapse_icon" value="Conv_toolbar_collapse"/>
	<string name="expand_icon" value="Conv_toolbar_expand"/>
	<layout_stack name="consversations_stack">
		<layout_panel name="conversations_layout_panel">
			<layout_stack name="consversations_pane_buttons_stack">
				<layout_panel name="conversations_pane_buttons_expanded">
					<menu_button name="sort_btn" tool_tip="Paràmetres de visualització/ordenació"/>
					<button name="add_btn" tool_tip="Comença una conversa"/>
					<button name="speak_btn" tool_tip="Parla a través del micròfon"/>
				</layout_panel>
				<layout_panel name="conversations_pane_buttons_collapsed">
					<button name="expand_collapse_btn" tool_tip="Contrau/expandeix aquesta llista"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
		<layout_panel name="messages_layout_panel">
			<panel_container name="im_box_tab_container">
				<panel name="stub_panel">
					<button name="stub_collapse_btn" tool_tip="Contrau aquest panell"/>
					<text name="stub_textbox">
						La conversa es mostra en una finestra separada. [secondlife:/// Torna.]
					</text>
				</panel>
			</panel_container>
		</layout_panel>
	</layout_stack>
</multi_floater>
