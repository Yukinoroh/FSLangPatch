	</floater.string>
	
	<layout_stack name="lists_layout_stack">
	<layout_panel name="whitelist_layout_panel">
	
	<scroll_list
		name="whitelist">
		<column label="Llista blanca" name="list" width="195" />
	</scroll_list>
	<text name="whitelist_text">
		Dominis permesos:
	</text>
	<scroll_list name="whitelist_list">
		<column label="Llista blanca" name="whitelist_col" />
	</scroll_list>
	<layout_stack name="whitelist_buttons_layout_stack">
	<layout_panel name="whitelist_buttons_panel_add">
	<button label="Afegeix..." label_selected="Afegeix..." name="add_whitelist" />
