		<column label="Llista negra" name="list" width="195" />
	</scroll_list>
	<layout_stack name="blacklist_buttons_layout_stack">
	<layout_panel name="blacklist_buttons_panel_add">
	<button label="Afegeix..." label_selected="Afegeix..." name="add_blacklist" />
	</layout_panel>
	<layout_panel name="blacklist_buttons_panel_remove">
	<button label="Treu" label_selected="Treu" name="remove_blacklist" />
	</layout_panel>
	</layout_stack>
	</layout_panel>
	</layout_stack>
