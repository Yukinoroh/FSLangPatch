<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel name="panel_login">
  <string name="ServerComboTooltip">
Graella existent o URI de la graella
  </string>
  <layout_stack name="ui_stack">
    <layout_panel name="ui_container">
      <layout_stack name="vert_stack_left">
        <layout_panel name="1st_row">
          <layout_stack name="1st_row_stack">
            <layout_panel name="login">
              <combo_box label="Usuari" name="username_combo" tool_tip="El nom d'usuari que vau triar en registrar-vos, per exemple: joanpi12 o Brillantor Estel·lar"/>
              <check_box label="Recorda l'usuari" name="remember_username_check"/>
            </layout_panel> <layout_panel name="delete_container">
              <button tool_tip="Suprimeix aquest nom d'usuari" label="" name="remove_user_btn"/>
            </layout_panel> <layout_panel name="password_container">
            <line_editor name="password_edit" label="Clau"/>
              <check_box label="Recorda la Clau" name="remember_check"/>
            </layout_panel> <layout_panel name="start_location_panel">
              <combo_box label="Ubicació d'inici" name="start_location_combo">
                <combo_box.item label="Última ubicació" name="MyLastLocation"/>
                <combo_box.item label="La meva llar" name="MyHome"/>
                <combo_box.item label="&lt;Escriu el nom de la regió&gt;" name="Typeregionname"/>
              </combo_box>
            </layout_panel>
          </layout_stack>
        </layout_panel>
        <layout_panel name="2nd_row">
          <layout_stack name="2nd_row_stack">
            <layout_panel name="grid_panel">
              <text name="grid_login_text" width="65">Graella:</text>
            </layout_panel>
            <layout_panel name="mode_selection">
              <text name="mode_selection_text">Mode:</text>
              <combo_box name="mode_combo" tool_tip="Trieu l'estil de visor amb el qual esteu més familiaritzat per establir els valors per defecte correctament.">
               
               
               <!--
              No cal traduïr
              <combo_box.item name="Firestorm"/>
              <combo_box.item name="Phoenix""/>
              <combo_box.item name="V3"/>
              <combo_box.item name="Hybrid"/>
              <combo_box.item name="Text"/>
              -->
              
              </combo_box>
            </layout_panel>
          </layout_stack>
        </layout_panel>
      </layout_stack>
      <button label="Inicia la sessió" name="connect_btn"/>
      <text name="create_new_account_text">Crea un compte</text>
      <text name="forgot_password_text">Has oblidat la Clau ?</text>
    </layout_panel>
  </layout_stack>
</panel>
