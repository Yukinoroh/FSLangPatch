<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="floater_translation_settings" title="Paràmetres de traducció automàtica">
	<string name="azure_api_key_not_verified">Identificador del servei Azure no verificat. Estat: [STATUS]. Verifiqueu els vostres paràmetres i torneu-ho a provar.</string>
	<string name="google_api_key_not_verified">Clau de l'API de Google no verificada. Estat: [STATUS]. Verifiqueu la vostra clau i torneu-ho a provar.</string>
	<string name="deepl_api_key_not_verified">Clau d'autenticació de DeepL no verificada. Estat: [STATUS]. Verifiqueu la vostra clau i torneu-ho a provar.</string>
	<string name="azure_api_key_verified">Identificador del servei Azure verificat.</string>
	<string name="google_api_key_verified">Clau de l'API de Google verificada.</string>
	<string name="deepl_api_key_verified">Clau de l'API de DeepL verificada.</string>
	<check_box label="Activa la traducció automàtica mentre xatejo" name="translate_chat_checkbox"/>
	<text name="translate_language_label">Tradueix el xat a:</text>
	<combo_box name="translate_language_combo">
		<combo_box.item label="El mateix que el sistema" name="System Default Language"/>
		<combo_box.item label="English (Anglès)" name="English"/>
		<combo_box.item label="Català" name="Catalan"/>
		<combo_box.item label="Dansk (Danès)" name="Danish"/>
		<combo_box.item label="Deutsch (Alemany)" name="German"/>
		<combo_box.item label="Español (Espanyol)" name="Spanish"/>
		<combo_box.item label="Français (Francès)" name="French"/>
		<combo_box.item label="Italiano (Italià)" name="Italian"/>
		<combo_box.item label="Magyar (Hongarès)" name="Hungarian"/>
		<combo_box.item label="Nederlands (Neerlandès)" name="Dutch"/>
		<combo_box.item label="Polski (Polonès)" name="Polish"/>
		<combo_box.item label="Português (Portuguès)" name="Portugese"/>
		<combo_box.item label="Русский (Rus)" name="Russian"/>
		<combo_box.item label="Türkçe (Turc)" name="Turkish"/>
		<combo_box.item label="Українська (Ucraïnès)" name="Ukrainian"/>
		<combo_box.item label="中文 (正體) (Xinès)" name="Chinese"/>
		<combo_box.item label="日本語 (Japonès)" name="Japanese"/>
		<combo_box.item label="한국어 (Coreà)" name="Korean"/>
	</combo_box>
	<text name="tip">Seleccioneu el servei de traducció automàtica:</text>
	<radio_group name="translation_service_rg">
		<radio_item label="Azure Translator" name="azure"/>
		<radio_item label="Google Translate" name="google"/>
		<radio_item label="DeepL Translate" name="deepl"/>
	</radio_group>
	<text name="azure_links_text">
[https://learn.microsoft.com/en-us/azure/cognitive-services/translator/create-translator-resource Guia]</text>
	<text name="azure_api_endoint_label">Punt final:</text>
	<text name="azure_api_key_label">Clau d'Azure:</text>
	<line_editor default_text="Introduïu la clau del traductor i feu clic a &quot;Verifica&quot;" name="azure_api_key"/>
	<text name="azure_api_region_label">Regió:</text>
	<line_editor default_text="Es pot deixar en blanc per a serveis globals" name="azure_api_region"/>
	<button label="Verifica" name="verify_azure_api_key_btn"/>
	<text name="google_api_key_label">Clau de l'API de Google [http://code.google.com/apis/language/translate/v2/getting_started.html#auth]:</text>
	<line_editor default_text="Introduïu la vostra clau de l'API de Google" name="google_api_key"/>
	<button label="Verificació" name="verify_google_api_key_btn"/>
	<text name="google_links_text">[http://code.google.com/apis/language/translate/v2/pricing.html Preus] | [https://code.google.com/apis/console Estadístiques] </text>
	<text name="deepl_api_domain_label">Punt final:</text>
	<combo_box name="deepl_api_domain_combo">
		<combo_box.item label="DeepL gratuït" name="global"/>
		<combo_box.item label="DeepL Pro" name="api-apc"/>
	</combo_box>
	<text name="deepl_api_key_label">Clau de l'API de DeepL:</text>
	<line_editor default_text="Introduïu la clau de l'API de DeepL i feu clic a &quot;Verifica&quot;" name="deepl_api_key"/>
	<button label="Verifica" name="verify_deepl_api_key_btn"/>
	<text name="deepl_links_text">[https://www.deepl.com/pro/select-country?cta=header-prices Tarifes]</text>
	<button label="D'acord" name="ok_btn"/>
	<button label="Cancel·la" name="cancel_btn"/>
