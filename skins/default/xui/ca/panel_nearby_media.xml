<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel name="nearby_media">
	<string name="media_item_count_format">
		(%ld articles amb multimèdia)
	</string>
	<string name="empty_item_text">
		&lt;buit&gt;
	</string>
	<string name="parcel_media_name">
		Vídeo en temps real a la parcel·la
	</string>
	<string name="parcel_audio_name">
		Àudio en temps real a la parcel·la
	</string>
	<string name="playing_suffix">
		(en reproducció)
	</string>
	<panel name="minimized_controls">
		<button label="Inhabilita-ho tot" name="all_nearby_media_disable_btn" tool_tip="Inhabilita tots els multimèdia propers"/>
		<button label="Habilita-ho tot" name="all_nearby_media_enable_btn" tool_tip="Habilita tots els multimèdia propers"/>
		<button name="open_prefs_btn" tool_tip="Obre la configuració multimèdia"/>
		<button label="Més&gt;&gt;" label_selected="&lt;&lt;Menys" name="more_btn" tool_tip="Controls addicionals" width="75"/>
	</panel>
	<panel name="nearby_media_panel">
		<text name="nearby_media_title">
			Multimèdia propers
		</text>
		<text name="show_text">
			Mostra:
		</text>
		<combo_box name="show_combo">
			<combo_box.item label="Tot" name="All"/>
			<combo_box.item label="En aquesta parcel·la" name="WithinParcel"/>
			<combo_box.item label="Fora d'aquesta parcel·la" name="OutsideParcel"/>
			<combo_box.item label="En altres avatars" name="OnOthers"/>
		</combo_box>
		<scroll_list name="media_list">
			<scroll_list.columns label="Distància" name="media_proximity"/>
			<scroll_list.columns label="Visibilitat" name="media_visibility"/>
			<scroll_list.columns label="Classe" name="media_class"/>
			<scroll_list.columns label="Nom" name="media_name"/>
			<scroll_list.columns label="Depuració" name="media_debug"/>
		</scroll_list>
		<panel name="media_controls_panel">
			<layout_stack name="media_controls">
				<layout_panel name="stop">
					<button name="stop_btn" tool_tip="Atura el multimèdia seleccionat"/>
				</layout_panel>
				<layout_panel name="play">
					<button name="play_btn" tool_tip="Reprodueix el multimèdia seleccionat"/>
				</layout_panel>
				<layout_panel name="pause">
					<button name="pause_btn" tool_tip="Atura el multimèdia seleccionat"/>
				</layout_panel>
				<layout_panel name="volume_slider_ctrl">
					<slider_bar initial_value="0.5" name="volume_slider" tool_tip="Volum del multimèdia seleccionat"/>
				</layout_panel>
				<layout_panel name="mute">
					<button name="mute_btn" tool_tip="Silencia el multimèdia seleccionat"/>
				</layout_panel>
				<layout_panel name="zoom">
					<button name="zoom_btn" tool_tip="Apropa la càmera al multimèdia seleccionat"/>
				</layout_panel>
				<layout_panel name="unzoom">
					<button name="unzoom_btn" tool_tip="Allunya la càmera del multimèdia seleccionat"/>
				</layout_panel>
			</layout_stack>
		</panel>
	</panel>
</panel>
